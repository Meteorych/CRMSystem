@model WebApplication1.Controllers.ProjectController.UpdateProjectDto

@{
    ViewData["Title"] = "Редактирование проекта";
}

<h1 class="justify-content-center">@ViewData["Title"]</h1>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div style="width: 100%" class="form-group">
                <label asp-for="Name" class="control-label">Название проекта
                    <input required asp-for="Name" class="form-control" />
                </label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div style="width: 100%" class="form-group">
                <label asp-for="ManagerName" class="control-label">
                    Менеджер
                    <select asp-for="ManagerName" class="form-control" asp-items="ViewBag.ManagerName"></select>
                </label>
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>

            <div style="width: 100%" class="form-group">
                <label asp-for="ClientName" class="control-label">
                    Клиент
                    <select asp-for="ClientName" class="form-control" asp-items="ViewBag.ClientName"></select>
                </label>
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>

            <div style="width: 100%" class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Index">Вернуться к списку</a>
    </div>
</div>

<style>
    .form-group {
        margin-top: 10px;
    }
    input, select {
        width: 100%;
    }
    label {
        width: 100%;
    }
</style>